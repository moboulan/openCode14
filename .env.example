# ── Database ─────────────────────────────────────────────────
POSTGRES_DB=incident_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=hackathon2026
DATABASE_URL=postgresql://postgres:hackathon2026@database:5432/incident_platform

# ── Alert Ingestion Service (:8001) ──────────────────────────
ALERT_SERVICE_PORT=8001
